<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white_300"
    tools:context=".ui.profil.ProfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_account_circle"
                android:contentDescription="@string/account_icon"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/profil_name"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_border"
                android:padding="8dp"
                android:paddingStart="25dp"
                android:hint="Name"
                android:drawableLeft="@drawable/ic_person_outline_24"
                android:drawablePadding="8dp"
                android:textColor="@color/grey_700"
                android:focusable="false" />

            <EditText
                android:id="@+id/profil_email"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/blue_border"
                android:padding="8dp"
                android:paddingStart="25dp"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_mail_outline_24"
                android:drawablePadding="8dp"
                android:textColor="@color/grey_700"
                android:focusable="false" />

            <Button
                android:id="@+id/profil_logout"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:text="Log Out"
                android:textSize="18sp"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
